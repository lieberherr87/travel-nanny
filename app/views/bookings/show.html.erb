<div class="container">
  <h1>Booking Summary</h1>
  <p>Find the Booking Details here:</p>

  <p><b>Your Nanny is: <%= @booking.offer.user.first_name %></b></p>
  <%= cl_image_tag @booking.offer.user.image, class:"avatar avatar-large" %>
  <p><b>Total Price: </b><%= @booking.full_price %> USD</p>
  <p><b>Location: </b><%= @booking.offer.location %></p>
  <p><b>From </b><%= @booking.start_date %> <b> to </b> <%= @booking.end_date %></p>


  <div id="reviews">
  <% if @booking.review.blank? %>
    Be the first to leave a review for <%= @booking.offer.user.first_name %>
  <% else %>
      <%= render 'reviews/show', review: @booking.review %>
  <% end %>
</div>

  <p><%= link_to 'Back to all Bookings', bookings_path %> </p>
  <% unless current_user.nanny? %>
     <p><td><%= link_to 'Cancel Booking', booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' } %> </td></p>
  <% end %>
</div>

