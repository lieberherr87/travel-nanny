<div class="container">

  <h1>These are your bookings</h1>
  <p>Manage your bookings here</p>

  <table class= "table table-hover">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Nanny</th>
        <th>Location</th>
        <th>Full Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%=  %></td>
          <td><%=  %></td>
          <td><%= booking.offer.user.first_name %></td>
          <td><%= booking.offer.location %></td>
          <td><%=  %></td>
          <td><%= link_to 'Show', booking_path(booking) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <%= link_to "Create a new booking", offers_path %>
</div>
