<div class="container">

  <h1>These are your bookings</h1>
  <p>Manage your bookings here</p>

  <table class= "table table-hover">
    <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Nanny</th>
        <th>Location</th>
        <th>Full Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.offer.user.first_name %></td>
          <td><%= booking.offer.location %></td>
          <td><%= booking.full_price %> USD</td>
          <td><%= link_to 'Show', booking_path(booking) %> </td>
        <% unless current_user.nanny? %>
          <td><%= link_to 'Cancel', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
          <td><%= link_to 'Add review', new_booking_review_path(booking) %> </td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
